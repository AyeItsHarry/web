---
import Layout from "../../../layouts/Layout.astro";
import { changeLanguage } from "i18next";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../../components/FormattedDate.astro";
import Ad from "../../../components/Ad.astro";
import i18next, { t, changeLanguage } from "i18next";
import { Trans } from "astro-i18next/components";

changeLanguage("hu");

const posts = (await getCollection("guide")).sort((b, a) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf());
---

<Layout
  title={t("guide.mainTitle")}
  description={t("guide.mainDesc")}
  image="/img/Guide_embed.webp"
/>
<Header isGuide="display:none;" />

<body>
  <div class="hold">
    <img class="newstop" style="" src="/img/guidestop.webp" />
    <div class="welcome-msg">
      <h2 style="font-size:40px; font-family:Gilroy;">
        <Trans i18nKey="guide.title">
          Welcome to the <span
            class="badge bg-success"
            style="top:-5px; left:0px; font-size:20px; font-family:Gilroy, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif; position:relative;"
          ></span><b style="font-family: Rubik;">WiiLink</b><span
            class="badge bg-success"
            style="top:-20px; left:-4px; font-size:15px; font-family:inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif; position:relative;"
            >guide</span
          >
        </Trans>
      </h2>
      <h3 style="font-size: calc(1.3rem + .6vw);">
        <Trans i18nKey="guide.subtitle">
          Here you'll find <b class="color">important information</b> regarding the
          service, as well as helpful <b class="color">guides</b> and <b
            class="color">troubleshooters</b
          > to get you up and running in no time!
        </Trans>
      </h3>
    </div>

    <div class="postholder">
      {
        posts
          .filter(post => ["Installation guide", "Frequently asked questions", "Problem solving"].includes(post.data.title))
          .map(post => (
            <div class="posthold" onclick={`window.location.href = /guide/${post.slug}/`} style="cursor:pointer;">
              <div class="post">
                <a href={`/guide/${post.slug}/`}>
                  <FormattedDate
                    pre="Last updated on: "
                    date={post.data.pubDate}
                  />
                  <img class="heroImage" src={post.data.heroImage} />
                  <div class="icon">
                    <i
                      class={post.data.icon}
                      style="top:50%; left:50%; transform:translate(-50%, -50%); font-size:80px; position:absolute;"
                    />
                  </div>
                  <div class="innerData">
                    <div class="title">{post.data.title}</div>
                    <div class="desc">{post.data.description}</div>
                  </div>
                </a>
              </div>
            </div>
          ))
      }
    </div>
    <div class="postholdermini">
      <div class="polka-dot"></div>
      {
        posts
          .filter(post => !["Installation guide", "Frequently asked questions", "Problem solving", "Dolphin Installation", "Wii U Installation", "Wii Installation"].includes(post.data.title))
          .map(post => (
            <div class="postmini">
              <a href={`/guide/${post.slug}/`}>
                <div class="dateRemove">
                  <FormattedDate date={post.data.pubDate} />
                </div>
                <div class="title-small">{post.data.title}</div>
              </a>
            </div>
          ))
      }
    </div>

    <Ad />

    <h3
      style="margin-top:100px; font-size: calc(1.3rem + .6vw); text-align:center; position:relative; width:100%;">
      <Trans i18nKey="guide.helpTitle">
        <b
          >Can't seem to get it <c class="color">working</c>? Be sure to <c
            class="color">get in touch</c
          >!</b
        >
      </Trans>
    </h3>
    <div class="btn-wrapper">
      <a href="mailto:support@wiilink.ca"
        ><div
          class="btn btn-success"
          style="color:white !important; padding:10px;">
          <i class="fa-solid fa-envelope" style="margin-right:5px;"></i>
          {t("guide.helpButton1")}
        </div></a
      >
      <a href="https://discord.gg/wiilink"
        ><div
          class="btn btn-primary"
          style="color:white !important; padding:10px;">
          <i class="fa-brands fa-discord" style="margin-right:5px;"></i>
          {t("guide.helpButton2")}
        </div></a
      >
    </div>
  </div>
</body>

<Footer />

<style>
  .flexhead {
    left: 50%;
    top: 130px;
    width: 90%;
    transform: translate(-50%, 0);
    align-items: center;
    justify-content: center;
    display: flex;
    z-index: 100;
    position: absolute;
  }

  .mainimgsmall {
    height: 180px;
    width: auto;
    transform: translate(0, 10px);
    z-index: 10;
    position: relative;
  }

  h2 {
    font-size: calc(1.3rem + 0.6vw);
  }

  .btn-wrapper {
    width: 320px;
    top: 20px;
    left: 50%;
    transform: translate(-50%, 0);
    display: flex;
    gap: 10px;
    z-index: 1000;
    position: relative;
  }

  .welcome-msg {
    top: 15px;
    max-width: 90%;
    left: 50%;
    transform: translate(-50%, 0);
    position: relative;
  }

  .newstop {
    left: 50px;
    top: 200px;
    transform: translate(0, -50%);
    height: 200px;
    filter: opacity(0.1) invert(0);
    position: absolute;
  }

  .downmargin {
    width: 100%;
    height: 500px;
    position: relative;
  }

  .socials {
    top: 50%;
    right: 50px;
    transform: translate(0, -50%);
    color: white;
    font-size: 25px;
    width: 150px;
    justify-content: right;
    display: flex;
    flex-wrap: wrap;
    position: absolute;
  }
  .subtitle {
    left: 80px;
    font-family: Gilroy;
    font-size: 50px;
    padding-bottom: 20px;
    position: relative;
    width: 50%;
  }
  .slogan {
    left: 80px;
    font-family:
      inter,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    color: white;
    width: 500px;
    position: relative;
  }
  .footer-holder {
    bottom: 20px;
    left: 50%;
    transform: translate(-50%, 0);
    display: flex;
    align-items: center;
    width: 98%;
    height: 250px;
    position: absolute;
  }

  html {
    font-family:
      inter,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
  .symbolholder {
    background-color: var(--bg-color);
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transition: 0.5s;
    z-index: 1;
    overflow: hidden;
    position: fixed;
  }
  .backsymbol {
    width: 100%;
    height: 100%;
    top: 0%;
    left: 50%;
    transform: translate(-50%, 0);
    z-index: 1;
    position: absolute;
  }
  .contentholder {
    left: 50%;
    transform: translate(-50%, 0);
    max-width: 1000px;
    position: relative;
  }
  .bottomleftcorner {
    animation: changecolor 10s linear infinite;
    position: relative;
  }
  .bottomleftcornerholder {
    left: -2.6px;
    bottom: -3px;
    scale: 31.6%;
    transform: translate(-106.5%, 107.3%);
    z-index: 2;
    position: absolute;
  }
  .square {
    --img-invert: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      41deg,
      rgba(0, 138, 255, 1) 0%,
      rgba(255, 0, 59, 1) 100%
    );
    z-index: 0;
    animation: changecolor 10s linear infinite;
    position: absolute;
  }

  .color {
    background: url("/img/header_bg.webp");
    background: AccentColor;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    filter: brightness(150%);
  }

  .posthold {
    transform: translate(0, 0px);
    opacity: 0;
    transition: 0.5s;
    overflow: hidden;
    position: relative;
  }

  .posthold:nth-child(1) {
    border-radius: 16px 8px 8px 16px;
    animation: fadeup 200ms 0.3s linear forwards;
  }
  .posthold:nth-child(2) {
    border-radius: 8px;
    animation: fadeup 200ms 0.35s linear forwards;
  }
  .posthold:nth-child(3) {
    border-radius: 8px 16px 16px 8px;
    animation: fadeup 200ms 0.4s linear forwards;
  }

  .mainimg {
    width: 100%;
    filter: blur(8px) opacity(0.3);
  }

  .mainpost:hover .mainimg {
    filter: blur(7px) opacity(0.3) brightness(125%);
  }

  .mainpost {
    width: 100%;
    height: 400px;
    top: 0;
    left: 0;
    opacity: 0;
    overflow: hidden;
    z-index: 0;
    translate: 0.5s;
    position: absolute;
  }

  .mainpost .fade {
    background: linear-gradient(
      0deg,
      rgb(255, 255, 255) 0%,
      rgba(239, 239, 239, 0) 100%
    );
  }

  .authimage {
    margin-right: 10px;
    width: 40px;
    height: 40px;
    border-radius: 8px;
    border: 1px solid #ffffff;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.297);
    z-index: 10000000000;
  }

  .mainpost:nth-child(1) {
    opacity: 1;
  }

  .postholder {
    width: 90%;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    position: absolute;
    gap: 16px;
    top: 40px;
    left: 50%;
    transform: translate(-50%, 0);
    position: relative;
    padding-bottom: 130px;
    z-index: 10;
  }

  .postholdermini {
    width: 90%;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    padding: 28px;
    background-color: var(--bg-color-secondary);
    border-radius: 16px;
    gap: 20px;
    top: 0px;
    left: 50%;
    transform: translate(-50%, 0px);
    position: relative;
    z-index: 10;
  }

  .post {
    position: relative;
    height: 500px;
    width: 100%;
    background-color: rgba(195, 195, 195, 0);
    font-family: Gilroy;
    hyphens: auto;
    overflow: hidden;
    transition: 0.5s;
  }

  .postmini {
    position: relative;
    height: 150px;
    width: 100%;
    background-color: var(--bg-color-secondary);
    border-radius: 8px;
    font-family: Gilroy;
    hyphens: auto;
    overflow: hidden;
    border: 3px solid var(--border-color);
    transition: 0.5s;
  }

  .posthold:before {
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    box-shadow: inset 0 0 0px 3px #ffffff20;
    z-index: 1;
    border-radius: 18px;
    border: solid 0px transparent;
    transition: 0.2s;
  }

  .posthold:nth-child(1):before {
    border-radius: 16px 8px 8px 16px;
  }

  .posthold:nth-child(2):before {
    border-radius: 8px;
  }

  .posthold:nth-child(3):before {
    border-radius: 8px 16px 16px 8px;
  }

  .posthold:hover:before {
    box-shadow: inset 0 0 0px 3px #ffffff77;
  }

  .postmini:hover {
    transform: translate(0, -5px);
    box-shadow: 0px 0px 40px var(--shadow-color);
    border: 3px solid rgba(161, 159, 159, 0.252);
    transition: 0.5s;
  }

  .heroImage {
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 10;
    transition: 0.3s;
  }

  .posthold:hover .heroImage {
    filter: blur(8px) brightness(0.7);
    rotate: 4deg;
    scale: 120%;
    z-index: 10;
    transition: 0.3s;
  }

  .maintitle {
    left: 80px;
    color: rgb(33, 36, 40);
    z-index: 11;
    scale: 100%;
    font-size: 60px;
    text-align: left;
    font-family: Gilroy;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    transition: 0.5s;
    position: relative;
  }

  .maindesc {
    position: relative;
    z-index: 11;
    font-size: 30px;
    left: 80px;
    text-align: justify;
    color: rgb(33, 36, 40);
    width: 90%;
    font-family: inter;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    opacity: 1;
    transition: 0.5s;
  }

  .title {
    width: auto;
    z-index: 11;
    font-size: max(20px, 30px);
    right: 0px;
    text-align: center;
    color: white !important;
    margin-bottom: 15px;
    line-height: 30px;
    font-family: Gilroy;
    transition: 0.5s;
    position: relative;
  }

  .innerData {
    width: 100%;
    bottom: 30px;
    position: absolute;
  }

  .title-small {
    width: 90%;
    height: auto;
    z-index: 11;
    font-size: max(20px, 30px);
    top: 50%;
    left: 50%;
    transform: translate(-50%, 0);
    text-align: center;
    color: #181818;
    line-height: 30px;
    font-family: Gilroy;
    transition: 0.5s;
    position: absolute;
  }

  .icon {
    color: white !important;
  }

  .desc {
    position: relative;
    font-family: inter;
    left: 50%;
    width: 70%;
    color: white !important;
    transform: translate(-50%, 0);
    font-size: 20px;
    right: 0;
    text-align: center;
    transition: 0.5s;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .faded {
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgb(2, 0, 36);
    background: linear-gradient(
      0deg,
      rgba(60, 60, 60, 0.337) 0%,
      rgba(244, 244, 244, 0) 100%
    );
    position: absolute;
    transition: 0.5s;
  }

  .fade-main {
    width: 100%;
    height: 50%;
    background: linear-gradient(
      0deg,
      rgb(255, 255, 255) 0%,
      rgba(244, 244, 244, 0) 100%
    );
    position: absolute;
    z-index: 2;
    bottom: 0px;
    left: 0;
    transition: 0.5s;
  }

  .fade-small {
    width: 100%;
    height: 100%;
    background: linear-gradient(
      0deg,
      rgb(203, 203, 203) 0%,
      rgba(244, 244, 244, 0) 100%
    );
    position: absolute;
    z-index: 2;
    bottom: -50px;
    left: 0;
    transition: 0.5s;
  }

  .polka-dot {
    width: 240px;
    height: 240px;
    background-image: radial-gradient(#484848 10%, transparent 11%),
      radial-gradient(#484848 10%, transparent 11%);
    background-size: 30px 30px;
    background-position:
      0 0,
      30px 30px;
    opacity: 0.3;
    rotate: 30deg;
    left: -80px;
    top: -120px;
    background-repeat: repeat;
    animation: rotate 240s linear infinite;
    position: absolute;
    z-index: 0;
  }

  .topimg {
    filter: invert(1);
    transform: translate(-100px, -100px);
    opacity: 0.03;
    position: absolute;
    width: 100%;
  }

  @keyframes rotate {
    0% {
      rotate: 0deg;
    }
    100% {
      rotate: 360deg;
    }
  }

  a {
    z-index: 1;
    color: white;
  }

  @keyframes fadeup {
    0% {
      opacity: 0;
      transform: translate(0, 20px);
    }
    100% {
      opacity: 1;
      transform: translate(0, 0px);
    }
  }

  .rss {
    left: 50%;
    transform: translate(-50%, 0);
    padding: 5px;
    padding-left: 10px;
    padding-right: 10px;
    background-color: rgb(98, 141, 98);
    border-radius: 8px;
    color: white;
    font-family: Gilroy;
    position: absolute;
    transition: 0.5s;
  }

  .rss:hover {
    transform: translate(-50%, -2px);
    box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.22);
    transition: 0.5s;
  }

  @media only screen and (max-width: 1000px) {
    .postholder {
      width: 95%;
      left: 50%;
      transform: translate(-50%, 0);
      display: flex;
      flex-direction: column;
      gap: 20px;
      top: 20px;
      position: relative;
      margin-bottom: 60px;
      z-index: 10;
    }

    .post {
      margin-bottom: 0;
      border-radius: 8px;
      height: 200px;
    }

    .title-small {
      width: auto;
      height: auto;
      z-index: 11;
      font-size: max(20px, 30px);
      top: 0;
      left: 0;
      transform: translate(0, 0);
      text-align: center;
      color: #181818;
      line-height: 30px;
      font-family: Gilroy;
      transition: 0.5s;
      position: relative;
    }

    .postholdermini {
      padding: 0px;
      top: 50px;
      border-radius: 0px;
      width: 100%;
      gap: 5px;
      overflow: hidden;
    }

    .postmini {
      position: relative;
      height: 100px;
      align-items: center;
      justify-content: center;
      width: 100%;
      background-color: var(--bg-color-secondary);
      border-radius: 0px;
      font-family: Gilroy;
      hyphens: auto;
      overflow: hidden;
      border: 0px solid var(--border-color);
      transition: 0.5s;
    }

    .icon {
      display: none;
    }

    .postmini:hover {
      transform: translate(0, 0px);
      box-shadow: 0px 0px 0px rgb(209, 209, 209);
      border: 0px solid rgba(161, 159, 159, 0.252);
      transition: 0.5s;
    }

    .postmini:nth-child(n + 5) {
      display: flex;
    }

    .dateRemove {
      display: none;
    }

    .desc {
      bottom: 0;
    }

    .subtitle {
      width: 100%;
      left: 0;
      text-align: center;
      font-size: 50px;
    }

    .newstop {
      display: none;
    }

    .posthold:hover {
      transform: translate(0, 0px) scale(102%);
      transition: 0.5s;
    }

    .posthold:hover .heroImage {
      filter: brightness(0.7);
      rotate: 0deg;
      scale: 110%;
      z-index: 0;
      transition: 0.3s;
    }
  }

  @media only screen and (min-width: 2000px) {
    .hold {
      left: 50%;
      transform: translate(-50%, 150px);
      width: 2000px;
      margin-bottom: 80px;
      position: relative;
    }
    .newstop {
      left: 60px;
      top: 80px;
      transform: translate(0, -50%);
      height: 200px;
      filter: opacity(0.1) invert(0);
      position: absolute;
    }
  }
</style>
